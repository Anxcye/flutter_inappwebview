{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2016",
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "strict": true,
    "resolveJsonModule": true,
    "stripInternal": true
  },
  "include": ["src"]
}
